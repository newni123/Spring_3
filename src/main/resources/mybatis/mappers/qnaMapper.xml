<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="qnaMapper">
	<!-- <select id="search" resultType="java.lang.String">
	    select title from qna where contents like '%c%';
	</select> -->	
	<select id="qnaCount" resultType="java.lang.Integer">
		select count(num) from qna
	</select>
	<select id="qnaList" resultType="com.iu.s3.model.board.QnaVO" parameterType="com.iu.s3.util.Pager">
		select * from (select N.*, rownum R from (select * from
		qna order by num desc) N)
		where R between #{startRow} and #{lastRow}
	</select>
	<insert id = "qnaInsert" parameterType="com.iu.s3.model.board.QnaVO">
		insert into qna values(board_seq.nextval,#{title},#{writer},#{contents},sysdate,0,0,0,0)
	</insert>
</mapper>